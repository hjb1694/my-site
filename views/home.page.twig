{% extends './partials/page.partial.twig' %}
{% block head %}
    {% from './partials/head.macro.twig' import head_macro %}
    {{ head_macro('Hayden Bradfield', 'https://haydenbradfield.com') }}
{% endblock head %}
{% block body %}
    {% include './partials/home/hero.partial.twig' %}
    {% include './partials/home/about_brief.partial.twig' %}
    {% include './partials/home/skills.partial.twig' %}
{% endblock body %}
{% block scripts %}
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>

    const dynamicWord = document.querySelector('.hero__content p');
    const words = ['Strength', 'Skill', 'Excellence', 'Success'];
    const menuBtn = document.querySelector('.menu-btn');
    const headerRight = document.querySelector('.header__right');
    let seq = 0;

    dynamicWord.textContent = words[0];

    setInterval(() => {
        if(seq < (words.length - 1)){
            seq++;
        }else{
            seq = 0;
        }

        dynamicWord.textContent = words[seq];
    }, 2500);

    AOS.init();

    const headerLogo = document.querySelector('.header__logo');

    const scrollFn = () => {
        if(document.body.scrollTop > 30 || document.documentElement.scrollTop > 30){
            headerLogo.classList.add('shrink');
        }else{
            headerLogo.classList.remove('shrink');
        }
    }

    const toggleMenu = () => {
        menuBtn.classList.toggle('open');
        headerRight.classList.toggle('open');
    }

    window.addEventListener('scroll', scrollFn);

    menuBtn.addEventListener('click', toggleMenu);

</script>
{% endblock scripts %}
