{% macro head_macro(title, urlPath) %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://haydenbradfield.com/me.png" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content="{{ urlPath }}" />
    <meta name="description" content="The Website of Hayden Bradfield, Knoxville, TN"/>
    <meta property="og:description" content="The Website of Hayden Bradfield, Knoxville, TN" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/style.css" />
    <link rel="canonical" href="{{ urlPath }}" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
{% endmacro %}